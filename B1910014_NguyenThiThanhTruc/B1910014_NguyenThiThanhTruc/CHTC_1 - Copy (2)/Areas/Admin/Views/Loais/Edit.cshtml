@model CHTC_1.Models.Loai

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:24px"> 
<h1 style="text-align:center">Chỉnh sửa loại</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LId" />
            <div class="form-group">
                <label asp-for="LTenloai" class="control-label">Tên loại:</label>
                <input asp-for="LTenloai" class="form-control" />
                <span asp-validation-for="LTenloai" class="text-danger"></span>
            </div>
                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Trở lại</a>
                </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
