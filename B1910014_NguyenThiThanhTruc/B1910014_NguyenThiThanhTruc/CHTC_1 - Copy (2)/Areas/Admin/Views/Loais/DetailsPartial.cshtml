@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<CHTC_1.Models.Loai>
<!-- Modal Role-->
<div class="modal fade" id="DetailsCateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chi tiết loại</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Nội dung dữ liệu từ controller sẽ được hiển thị ở đây -->
                <div id="modalContent">
                    <div style="text-align:center">
                        <dl class="row">
                            <dt class="col-4" style="padding:12px 0">
                                Tên loại:
                            </dt>
                            <dd class="col-sm-8" id="categoryName">
                            </dd>
                            
                        </dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


