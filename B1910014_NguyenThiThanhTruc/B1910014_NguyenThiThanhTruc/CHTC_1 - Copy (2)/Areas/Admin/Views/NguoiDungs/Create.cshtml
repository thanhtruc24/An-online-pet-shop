@model CHTC_1.Models.TaiKhoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:24px">
<h1 style="text-align:center">Tạo mới tài khoản</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="NguoiDungs" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="VtId" class="control-label">Quyền sử dụng</label>
                <select asp-for="VtId" class="form-control" asp-items="@ViewBag.Vaitrotaikhoan" required>
                    <option value="0" disabled selected>Chọn vai trò</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="Nd.NdHoten" class="control-label">Họ tên:</label>
                    <input asp-for="Nd.NdHoten" class="form-control" />
                <span asp-validation-for="Nd.NdHoten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nd.NdHinhanh" class="control-label">Hình ảnh:</label>
                <input type="file" name="ifile" asp-for="Nd.NdHinhanh" class="form-control-file">
                <span asp-validation-for="Nd.NdHinhanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TkEmail" class="control-label">Email:</label>
                <input asp-for="TkEmail" class="form-control" type="email" />
                <span asp-validation-for="TkEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TkMatkhau" class="control-label">Mật khẩu:</label>
                <input asp-for="TkMatkhau" class="form-control"  type="password"/>
                <span asp-validation-for="TkMatkhau" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Nd.NdSdt" class="control-label">Số điện thoại:</label>
                    <input asp-for="Nd.NdSdt" class="form-control" />
                    <span asp-validation-for="Nd.NdSdt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nd.NdDiachi" class="control-label">Địa chỉ:</label>
                    <input asp-for="Nd.NdDiachi" class="form-control" />
                    <span asp-validation-for="Nd.NdDiachi" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
