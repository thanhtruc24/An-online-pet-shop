@model CHTC_1.Models.TaiKhoan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div style="margin-left:24px;text-align:center">
    <h1>Chi tiết tài khoản</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Họ tên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nd.NdHoten)
        </dd>
        <dt class = "col-sm-2">
            Ảnh đại diện:
        </dt>
        <dd class = "col-sm-10">
            <img src="/images/@Model.Nd.NdHinhanh" width="200px" height="160px" style="border-radius:60px"/>
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TkEmail)
        </dd>
        <dt class = "col-sm-2">
            Mật khẩu:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TkMatkhau)
        </dd>
        <dt class = "col-sm-2">
            Vai trò tài khoản:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vt.VtTenvaitro)
        </dd>
    </dl>

<div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.NdId">Chỉnh sửa</a> |
        <a class="btn" style="background-color:rgb(9, 122, 60);color:antiquewhite" asp-action="Index">Trở lại</a>
</div>
</div>
