@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<CHTC_1.Models.SanPham>
<!-- Modal Role-->
<div class="modal fade" id="DetailsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chi tiết sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Nội dung dữ liệu từ controller sẽ được hiển thị ở đây -->                
                <div id="modalContent">
                    <div style="text-align:center">
                        <dl class="row">
                            <dt class="col-4" style="padding:12px 0">
                                Tên sản phẩm:
                            </dt>
                            <dd class="col-sm-8" id="productName">
                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Giá:
                            </dt>
                            <dd class="col-sm-8" id="productPrice">
                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Số lượng:
                            </dt>
                            <dd class="col-sm-8" id="productQuantity">
                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Mô tả:
                            </dt>
                            <dd class="col-sm-8" id="productDescription">
                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Hình ảnh:
                            </dt>
                            <dd class="col-sm-8" >
                                <img id="productImage" src="" alt="Hình ảnh sản phẩm" style="width:122px">
                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Loại:
                            </dt>
                            <dd class="col-sm-8" id="productCategory">

                            </dd>
                            <dt class="col-4" style="padding:12px 0">
                                Nhà cung cấp:
                            </dt>
                            <dd class="col-sm-8" id="productSupplier">

                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

