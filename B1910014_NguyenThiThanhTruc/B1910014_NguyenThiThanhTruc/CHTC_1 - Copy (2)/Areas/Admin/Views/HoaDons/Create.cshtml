@model CHTC_1.Models.HoaDon

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:24px">
<h1 style="text-align:center">Tạo hoá đơn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="HoaDons" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PtttId" class="control-label">Phương thức thanh toán:</label>
                <select asp-for="PtttId" class="form-control" asp-items="@ViewBag.ThanhToan" required>
                    <option value="0" disabled selected>Chọn phương thức</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NdId" class="control-label">Người dùng:</label>
                <input asp-for="NdId" class="form-control" />
                <span asp-validation-for="NdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TthdId" class="control-label">Trạng thái:</label>
                <select asp-for="TthdId" class="form-control" asp-items="@ViewBag.TrangThai" required>
                    <option value="0" disabled selected>Trạng thái</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="HdTongtien" class="control-label">Tổng tiền:</label>
                <input asp-for="HdTongtien" class="form-control" />
                <span asp-validation-for="HdTongtien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HdNgay" class="control-label">Ngày đặt:</label>
                <input asp-for="HdNgay" class="form-control" />
                <span asp-validation-for="HdNgay" class="text-danger"></span>
            </div>
                <div class="form-group text-center">
                    <input type="submit" value="Lưu" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Trở lại</a>
                </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
