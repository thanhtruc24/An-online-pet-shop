@model CHTC_1.Models.TaiKhoan
@{
    ViewData["Title"] = "ProflieAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin:24px">
	<h1 style="text-align:center">Thông tin cá nhân</h1>

	<div class="container">
		<div class="row gutters">
			<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
				<div class="card h-100">
					<div class="card-body">
						<div class="account-settings">
							<div class="user-profile">
								<div class="user-avatar">
									<img src="/images/@Model.Nd.NdHinhanh" alt="User Picture" style="width: -webkit-fill-available" >
								</div>

							</div>
							@*<div class="about">
							<h5>About</h5>
							<p>I'm Yuki. Full Stack Designer I enjoy creating user-centric, delightful and human experiences.</p>
							</div>*@
						</div>
					</div>
				</div>
			</div>
			<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
				<div class="card h-100">
					<div class="card-body">
						<div class="row gutters">
							<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
								<h6 class="mb-2 text-primary">Chi tiết</h6>
							</div>
							<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
								<div class="form-group">
									<label for="fullName">Họ tên</label>
									<div class="form-control">
										@Html.DisplayFor(model => model.Nd.NdHoten)
									</div>
								</div>
							</div>
							<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
								<div class="form-group">
									<label for="eMail">Email</label>
									<div class="form-control">
										@Html.DisplayFor(model => model.TkEmail)
									</div>
								</div>
							</div>

							<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
								<div class="form-group">
									<label for="phone">Số điện thoại</label>
									<div class="form-control">
										@Html.DisplayFor(model => model.Nd.NdSdt)
									</div>
								</div>
								<div class="form-group">
									<label class="gender">Giới tính</label>
									<div class="form-control">
										@if (Model.Nd.NdGioitinh == 0)
										{
											<p>Name</p>
										}
										else if (Model.Nd.NdGioitinh == 1)
										{
											<p>Nữ</p>
										}
										else
										{
											<p>Khác</p>
										}
										@*@Html.DisplayFor(model => model.Nd.NdGioitinh)*@
									</div>

								</div>
							</div>
							<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
								<div class="form-group">
									<label for="website">Địa chỉ</label>
									<div class="form-control">
										@Html.DisplayFor(model => model.Nd.NdDiachi)
									</div>
								</div>
							</div>
						</div>

						<div class="row gutters">
							<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
								<div class="text-right">
									@*<button type="button" id="submit" name="submit" class="btn btn-secondary">Cancel</button>*@
									<a asp-area="Admin" asp-controller="AdminAccount" asp-action="EditProfileAdmin" asp-route-id="@Model.NdId" class="btn btn-primary">Chỉnh sửa</a>
									@*<button type="button" id="submit" name="submit" class="btn btn-primary">Update</button>*@
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
